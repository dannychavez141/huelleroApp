<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonCapture"
        android:layout_width="154dp"
        android:layout_height="84dp"
        android:layout_x="222dp"
        android:layout_y="184dp"
        android:text="Capturar Huella 1"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewFingerprint"
        android:layout_width="182dp"
        android:layout_height="218dp"
        android:layout_x="15dp"
        android:layout_y="158dp"
        android:contentDescription="@string/fingerprint_capture_image"
        android:src="@android:drawable/picture_frame" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="378dp"
        android:layout_height="40dp"
        android:layout_x="19dp"
        android:layout_y="629dp"
        android:text="@string/welcome"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnatraz"
        android:layout_width="154dp"
        android:layout_height="64dp"
        android:layout_x="196dp"
        android:layout_y="694dp"
        android:background="@android:color/holo_orange_light"
        android:text="LIMPIAR"
        android:textColor="#3949AB"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_x="19dp"
        android:layout_y="75dp"
        android:text="DNI:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="375dp"
        android:layout_height="33dp"
        android:layout_x="15dp"
        android:layout_y="12dp"
        android:text="REGISTRO DE HUELLAS DACTILARES"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtdatoClase"
        android:layout_width="358dp"
        android:layout_height="33dp"
        android:layout_x="29dp"
        android:layout_y="115dp"
        android:text="------------------------"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgtemp"
        android:layout_width="185dp"
        android:layout_height="221dp"
        android:layout_x="13dp"
        android:layout_y="388dp"
        app:srcCompat="@drawable/hamster4" />

    <Button
        android:id="@+id/btncomp"
        android:layout_width="154dp"
        android:layout_height="64dp"
        android:layout_x="219dp"
        android:layout_y="540dp"
        android:text="Comparar Huellas"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnbuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="299dp"
        android:layout_y="64dp"
        android:text="Buscar" />

    <EditText
        android:id="@+id/txtCodAula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="64dp"
        android:ems="10"
        android:hint="DNI del Docente"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_x="29dp"
        android:layout_y="697dp"
        android:background="@color/teal_200"
        android:text="Guardar" />

    <Button
        android:id="@+id/btntemp"
        android:layout_width="154dp"
        android:layout_height="87dp"
        android:layout_x="225dp"
        android:layout_y="397dp"
        android:text="Capturar Huella 2"
        android:textSize="16sp" />

</AbsoluteLayout>